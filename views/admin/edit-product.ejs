<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errMsg) { %>
            <div class="user-message user-message--error"><%= errMsg %></div>
        <% } %>
        <form 
            class="product-form" 
            action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" 
            method="POST"
            enctype="multipart/form-data"
        >
<!-- multer will looking for icmreq with this type of data -> able to parse both text (urlencoded data) & file (binary data) -->
            <div class="form-control">
                <label for="title">Title</label>
                <input 
                class="<%= validationErrors.find(err => err.param === 'title') ? 'invalid' : ''%>"
                type="text" name="title" id="title" value="<% if (editing || hasErr ) { %><%= product.title %><% } %>"
                >
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="file" name="imageUrl" id="imageUrl" >
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input 
                class="<%= validationErrors.find(err => err.param === 'price') ? 'invalid' : ''%>"
                type="number" name="price" id="price" step="0.01" value="<% if (editing || hasErr ) { %><%= product.price %><% } %>"
                >
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea 
                class="<%= validationErrors.find(err => err.param === 'description') ? 'invalid' : ''%>"
                name="description" id="description" rows="5"><% if (editing || hasErr ) { %><%= product.description %><% } %></textarea>
            </div>
            <% if (editing || hasErr ) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
    </main>
<%- include('../includes/end.ejs') %>